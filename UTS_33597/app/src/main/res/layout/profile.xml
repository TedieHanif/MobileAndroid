<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    tools:context=".profil"
    android:background="@drawable/back1">



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/foto"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/nim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"

        android:layout_below="@+id/foto"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:text="NIM     :   00000033597"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nim"
        android:layout_marginTop="20dp"
        android:layout_marginStart="100dp"
        android:textColor = "#000000"
        android:text="Nama  :   Tedie Muhammad Hanif"
        />
    <TextView
        android:id="@+id/kelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nama"
        android:layout_marginTop="20dp"
        android:layout_marginStart="100dp"
        android:textColor = "#000000"
        android:text="Kelas   :  FL"
        />
    <TextView
        android:id="@+id/ref"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kelas"
        android:text="Referensi : "
        android:textColor = "#000000"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/ref1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ref"
        android:text="1. Web : "
        android:textColor = "#000000"/>

    <TextView
        android:id="@+id/ref2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ref1"
        android:layout_marginStart="14dp"
        android:text="https://www.11zon.com/zon/android/login-page-in-android-studio-source-code.php"
        android:textColor="#000000" />
    <TextView
        android:id="@+id/ref3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ref2"
        android:layout_marginStart="14dp"
        android:text= "https://github.com/developersamuelakram/MusicPlayer"
        android:textColor="#000000" />


</RelativeLayout>